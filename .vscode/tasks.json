{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current File",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "install_${fileBasenameNoExtension}"
            ],
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            },
            "problemMatcher": {
                "owner": "zig",
                "fileLocation":"autoDetect",
                "pattern": {
                    "regexp": "([^\\s]*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
            },
            "group": "build"
        },
        {
            "label": "Test Current File",
            "type": "shell",
            "command": "zig",
            "args": [
                "test",
                "${file}"
            ],
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            },
            "problemMatcher": {
                "owner": "zig",
                "fileLocation":"autoDetect",
                "pattern": {
                    "regexp": "([^\\s]*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
            },
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "test"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "format",
            "type": "shell",
            "command": "zig",
            "args": [
                "fmt",
                "${file}"
            ],
            "problemMatcher": []
        }
    ]
}